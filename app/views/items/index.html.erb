<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p id="item-id-<%= item.id %>">
        <%= item.description %>
        <%= button_to "Order Now", orders_path(item_id: item.id), method: :post %>
        <%= button_to "Add to Favorites", favorites_path(item_id: item.id), method: :post %>
      </p>
    </div>
  <% end %>
</div>

